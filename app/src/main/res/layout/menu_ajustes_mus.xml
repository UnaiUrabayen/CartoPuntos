<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog"
    android:elevation="8dp">

    <!-- Botón de Volver -->
    <ImageButton
        android:id="@+id/btnVolver"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_button_border"
        android:src="@mipmap/arrow_back_24dp"
        android:contentDescription="@string/boton_para_volver_artras"
        android:padding="8dp"
        android:scaleType="centerInside"
        app:tint="@android:color/black" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloAjustes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ajustes_del_juego"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Selector de número de rondas -->
    <TextView
        android:id="@+id/tvCantidadRondas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cantidad_de_rondas_para_ganar"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <NumberPicker
        android:id="@+id/numberPickerRondas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:value="3" />

    <!-- Botón Confirmar -->
    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirmar"
        android:background="@drawable/bg_button_border"
        android:textColor="@android:color/black"
        android:padding="14dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
