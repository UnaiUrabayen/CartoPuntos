<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cp_light_primary">

    <!-- Jugador 2 (arriba, invertido o "boca abajo") -->
    <FrameLayout
        android:id="@+id/frameLayoutJugador2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/frameLayoutJugador1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/borde_blanco"
        android:rotation="180"> <!-- Rotación de 180 grados para hacerlo boca abajo -->

        <ImageView
            android:id="@+id/imageViewJugador2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:contentDescription="@string/icono_de_usuario_del_jugador_2"
            app:srcCompat="@drawable/account_circle_24px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_jugador2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jugador_2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <!-- Botón "Menos" primero en el modo invertido -->
                <Button
                    android:id="@+id/btn_menos2"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/cp_light_button"
                    android:text="@string/menos"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/tv_puntosJuj2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/puntosJug2"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp" />

                <!-- Botón "Más" al final -->
                <Button
                    android:id="@+id/btn_mas2"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@color/cp_light_button"
                    android:text="@string/mas"
                    android:textSize="32sp" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <!-- Jugador 1 (abajo, normal) -->
    <FrameLayout
        android:id="@+id/frameLayoutJugador1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutJugador2"
        android:background="@drawable/borde_blanco">

        <ImageView
            android:id="@+id/imageViewJugador1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|start"
            android:layout_margin="8dp"
            android:contentDescription="@string/icono_de_usuario_del_jugador_1"
            app:srcCompat="@drawable/account_circle_24px" />

        <LinearLayout
            android:layout_width="387dp"
            android:layout_height="239dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_jugador1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/jugador_1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Botón "Menos" primero -->
                <Button
                    android:id="@+id/btn_menos"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/cp_light_button"
                    android:text="@string/menos"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/tv_puntosJuj1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:text="@string/puntosJug1"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Botón "Más" al final -->
                <Button
                    android:id="@+id/btn_mas"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@color/cp_light_button"
                    android:text="@string/mas"
                    android:textSize="32sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botón de menú en la parte inferior derecha para el Jugador 1 -->
        <Button
            android:id="@+id/btn_menu_jugador1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/menu" />
    </FrameLayout>

    <!-- Botón de menú ubicado en la esquina superior derecha -->
    <Button
        android:id="@+id/btn_menu_jugador2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|end"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
